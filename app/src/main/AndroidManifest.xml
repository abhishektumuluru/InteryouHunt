<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.interyouhunt.hunt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ViewPositionDetailsActivity"
            android:label="@string/title_activity_view_position_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddStageActivity"
            android:label="@string/title_activity_add_stage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".intActivity"
            android:label="@string/title_activity_int"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".AddPositionActivity" />
        <activity android:name=".ForumActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".RegistrationActivity" />
        <activity
            android:name=".ToDoActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>