        <TextView android:id="@+id/input_types_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Select Position Type" />

        <RadioGroup
            android:id="@+id/radio_group_position_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_above="@+id/view_below" >
            <RadioButton
                android:id="@+id/radio_intern"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Internship" />
            <RadioButton
                android:id="@+id/radio_full_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Full Time" />
            <RadioButton
                android:id="@+id/radio_coop"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Co-op" />
        </RadioGroup>

