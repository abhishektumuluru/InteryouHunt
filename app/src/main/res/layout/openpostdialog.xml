<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:id="@+id/company_name_textview"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"
        android:text="Company Name"

        android:textStyle="bold|italic"
        android:textColor="#ff000000"
        android:gravity="center_horizontal"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company_name_textview"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/open_dialog_company_textInputLayout"
        android:layout_marginBottom="8dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/open_dialog_company_textview"
            />
    </android.support.design.widget.TextInputLayout>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"
        android:id="@+id/company_position_textview"
        android:layout_below="@+id/open_dialog_company_textInputLayout"
        android:text="Position"
        android:textStyle="bold|italic"
        android:textColor="#ff000000"
        android:gravity="center_horizontal"
        />



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company_position_textview"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/open_dialog_position_textInputLayout"
        android:layout_marginBottom="8dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/open_dialog_position_textview"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"
        android:id="@+id/company_title_textview"
        android:layout_below="@+id/open_dialog_position_textInputLayout"
        android:text="Post Title"
        android:textStyle="bold|italic"
        android:textColor="#ff000000"
        android:gravity="center_horizontal"
        />
