<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:id="@+id/company_name_textview"
        android:layout_marginBottom="20dp"
        android:textSize="22sp"
        android:text="Company Name"
        android:textStyle="bold|italic"
        android:textColor="#ff000000"
        android:gravity="center_horizontal"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_dialog_company_textview"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_below="@+id/company_name_textview"
        android:layout_marginBottom="20dp"
        android:maxLength="100"
        android:textSize="22sp"
        android:maxLines="1"
        android:textColor="#ff000000"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open_dialog_company_textview"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:id="@+id/company_title_textview"
        android:text="Post Title"
        android:textStyle="bold|italic"
        android:textColor="#ff000000"
        android:gravity="center_horizontal"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_dialog_title_textview"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:maxLines="2"
        android:maxLength="300"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_below="@+id/company_title_textview"
        android:textColor="#ff000000"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/open_dialog_title_textview"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:maxLines="10"
        android:id="@+id/description_textview"
        android:text="Description"
        android:textStyle="bold|italic"
        android:textColor="#ff000000"
        android:gravity="center_horizontal"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_dialog_description_textview"
        android:layout_below="@+id/description_textview"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:maxLength="1000"
        android:textColor="#ff000000"
        android:gravity="center_horizontal" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/post_btn_dialog"
        android:gravity="center_horizontal"
        android:layout_below="@+id/open_dialog_description_textview"
        android:text="Post"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ff000000" />

</RelativeLayout>