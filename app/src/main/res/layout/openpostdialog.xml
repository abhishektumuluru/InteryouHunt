    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_textview"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/open_dialog_description_textInputLayout"
        android:layout_marginBottom="8dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/open_dialog_description_textview"
            />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/interview_type_spinner"
        android:layout_below="@+id/open_dialog_description_textInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:entries="@array/interview_types_array"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        android:textSize="17sp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/post_btn_dialog"
        android:gravity="center_horizontal"
        android:layout_below="@+id/interview_type_spinner"
        android:text="Post"
        android:layout_marginTop="10dp"
        android:textColor="#ffffffff"
        android:backgroundTint="#2196f3"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/cancel_btn_dialog"
        android:gravity="center_horizontal"
        android:layout_below="@+id/post_btn_dialog"
        android:text="Cancel"
        android:backgroundTint="#F22F17"
        android:textColor="#ffffffff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>