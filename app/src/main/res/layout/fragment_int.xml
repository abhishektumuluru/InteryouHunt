<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".intActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="32dp"
            android:text="Company's Name" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:text="Date:" />

        <TextView
            android:id="@+id/dateTime"
            android:paddingLeft="14dp"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="interview's round type" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/location"
            android:layout_width="89dp"
            android:textStyle="bold|italic"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Location:" />

        <TextView
            android:id="@+id/userLocation"
            android:paddingLeft="14dp"
            android:layout_width="214dp"
            android:textSize="18dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/round"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:textStyle="bold|italic"
            android:text="Round Type:" />

        <TextView
            android:id="@+id/roundType"
            android:paddingLeft="14dp"
            android:textSize="18dp"
            android:layout_width="214dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:text="Interview Type:" />

        <TextView
            android:id="@+id/interviewType"
            android:paddingLeft="14dp"
            android:textSize="18dp"
            android:layout_width="214dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/notes"
            android:layout_width="104dp"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:layout_height="21dp"
            android:text="Notes:" />

        <TextView
            android:id="@+id/notesText"
            android:layout_width="210dp"
            android:layout_height="115dp"
            android:textSize="18dp"
            android:text="these are the notes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:paddingRight="24dp">

        <!--<Button-->
            <!--android:id="@+id/edit_stage"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

        <!--<Button-->
            <!--android:id="@+id/delete_stage"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_edit_stage"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Edit"
            tools:enabled="false" />

        <android.support.v4.widget.Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_delete_stage"
            android:width="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Delete"
            tools:enabled="false" />

    </LinearLayout>

</LinearLayout>