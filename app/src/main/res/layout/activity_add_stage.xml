<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true">

        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="8dp">
        <EditText android:id="@+id/input_stage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stage" />
        </android.support.design.widget.TextInputLayout>

        <TextView android:id="@+id/input_stage_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Select Stage Number" />

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/stage_number_picker"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            numberpicker:min="1"
            numberpicker:max="10"
            numberpicker:value="1"
            numberpicker:unit="1"
            numberpicker:focusable="false" />

        <TextView android:id="@+id/input_types_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Select All Interview Types" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="8dp">
            <CheckBox android:id="@+id/checkbox_behavioral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Behavioral"
            android:onClick="onCheckboxClicked"/>
            <CheckBox android:id="@+id/checkbox_technical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technical"
            android:onClick="onCheckboxClicked"/>
            <CheckBox android:id="@+id/checkbox_case_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case Study"
            android:onClick="onCheckboxClicked"/>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="8dp">
        <EditText android:id="@+id/input_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location" />
        </android.support.design.widget.TextInputLayout>

        <EditText
        android:id="@+id/input_date"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:clickable="true"
        android:focusable="false"
        android:inputType="datetime"
        android:hint="Date"/>

        <TimePicker
        android:id="@+id/input_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="2dp">
        <EditText android:id="@+id/input_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:hint="Notes" />
        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_add_stage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Add Stage"
            tools:enabled="true" />

    </LinearLayout>x
</ScrollView>