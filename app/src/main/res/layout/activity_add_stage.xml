        <EditText android:id="@+id/input_stage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stage" />
        </android.support.design.widget.TextInputLayout>

        <TextView android:id="@+id/input_stage_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Select Stage Number" />

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/stage_number_picker"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            numberpicker:min="1"
            numberpicker:max="10"
            numberpicker:value="1"
            numberpicker:unit="1"
            numberpicker:focusable="false" />

        <TextView android:id="@+id/input_types_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Select All Stage Types" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/my_spinner"
            android:dropDownWidth="match_parent">
